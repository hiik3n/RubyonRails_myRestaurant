<h1>Menu</h1>

<% Section.all.each do |section| %>
	<div class="btn-group" role="group" aria-label="Basic example"> 
	 	 <%= link_to section, menu_path(section: section), class: 'btn btn-secondary' %>
	</div>
<% end %>


	<% @food_items.each do |food_item| %>
		<div class="card">
				<div class="card-header"><%= food_item.name%></div>
		</div> 
		<div class="card-block">
			<div class="row">
				<div class="col-xs-12 col-md-8">
					<%= image_tag food_item.image_url %>
				</div>
				<div class="col-xs-6 col-md-4">
					<p><strong>Description:</strong> <%= food_item.descripion %></p>
					<p><strong>Price:</strong> <%= food_item.price %> VND</p>
				</div>

			</div>
			
			
		</div>
	<% end %>
